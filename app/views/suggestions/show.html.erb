<div class="container">
  <h2><%= @suggestion.title %></h2>

  <p>Target: <%= @suggestion.target %></p>
  <p>Suggestion:</p>
  <p><%= @suggestion.body %></p><br>
  <p>Comments:</p>
  <% @comments.each do |c| %>
    <p><%= User.find(c.user_id).first_name %> <%= User.find(c.user_id).last_name %> said:<br><%= c.body %></p>
  <% end %>

  <p><%= link_to 'Add a comment', new_suggestion_comment_path(suggestion_id: params[:id]) %></p>
</div>
