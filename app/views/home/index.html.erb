<header>
  <h1>Suggestion Box</h1>
  <a href="">Login</a>
</header>

<div class="signup">
  <%= form_for :user, url: url_for(controller: 'users', action: 'signup') do |f| %>
    <p><%= f.text_field :email, placeholder: 'enter your email' %></p>
    <p><%= f.submit %></p>
  <% end %>
</div>

<div>
  <h2>See some recent Suggestions</h2>
  <% @suggestions.each_with_index do |s,i| %>
    <% location = "" %>
    <% location = " (#{User.find(s.owner_id).location}) " if s.local %>
    <p><%= link_to "#{i + 1}. #{s.target}#{location} - #{s.title}", suggestion_path(s.id) %></p>
  <% end %>
</div>